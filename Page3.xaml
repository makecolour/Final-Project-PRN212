<Page x:Class="Question2.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Question2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"/>
            <!-- Adjusted for header -->
            <RowDefinition Height="8*"/>
            <!-- Adjusted to take remaining space -->
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="SubPageFrame"/>
        <!-- Header -->
        <HeaderedContentControl Grid.Row="1" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="DarkRed" Content="Manage Customer"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- DataGrid adjusted to be directly within the Grid and span all available space -->
            <DataGrid  Name="Customers" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" AllowDrop="False" PreviewMouseLeftButtonUp="Customers_OnPreviewMouseLeftButtonDown">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding CustomerFullName}" Width="3*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="3*"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Telephone}" Width="3*"/>
                    <DataGridTextColumn Header="Date of Birth" Binding="{Binding CustomerBirthday}" Width="2*"/>
                    <DataGridCheckBoxColumn Header="Status" Width="*" Binding="{Binding CustomerStatus}"></DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="1">
                <Grid Grid.Row="1">
                    <TextBlock Margin="5,0,5,0">Customer Id</TextBlock>
                    <TextBox  Margin="5,15,5,5" IsReadOnly="True" Name="txtId" Text="{Binding ElementName=Customers, Path=SelectedItem.CustomerId, Mode=OneWay}"  />
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Margin="5,0,5,0">Customer Name</TextBlock>
                    <TextBox  Margin="5,15,5,5" Name="txtName" Text="{Binding ElementName=Customers, Path=SelectedItem.CustomerFullName, Mode=OneWay}"  />
                </Grid>

                <Grid Grid.Row="4">
                    <TextBlock Margin="5,0,5,0">Telephone</TextBlock>
                    <TextBox  Margin="5,15,5,5" Name="txtTelephone" Text="{Binding ElementName=Customers, Path=SelectedItem.Telephone, Mode=OneWay}"  />
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock Margin="5,0,5,0">Email</TextBlock>
                    <TextBox  Margin="5,15,5,5" Name="txtEmail" IsReadOnly="True" Text="{Binding ElementName=Customers, Path=SelectedItem.EmailAddress, Mode=OneWay}"  />
                </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Margin="5,0,5,0">Date Of Birth</TextBlock>
                    <DatePicker  Margin="5,15,5,5" Name="dpDob" Text="{Binding ElementName=Customers, Path=SelectedItem.CustomerBirthday, Mode=OneWay}"  />
                </Grid>

                <Grid Grid.Row="6">
                    <TextBlock Margin="5,0,5,0">Status</TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,20,0,5">
                        <RadioButton Content="Active" Margin="0,0,30,0" Name="active"></RadioButton>
                        <RadioButton Content="Deactive" Name="deactive"></RadioButton>
                    </StackPanel>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Height="30" Click="ButtonBase_OnClick">Refresh</Button>
                    <Button Margin="5" Grid.Column="1" Height="30" Click="ButtonBase_OnClickAdd">Add</Button>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Height="30" Click="ButtonBase_OnClickPass">Reset Password</Button>
                    <Button Margin="5" Grid.Column="1" Height="30" Click="ButtonBase_OnClickDel">Delete</Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
