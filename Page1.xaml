<Page x:Class="Question2.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Question2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <HeaderedContentControl VerticalAlignment="Center" Grid.Row="0" HorizontalAlignment="Center" FontSize="20" Foreground="DarkRed">Hotel Management System</HeaderedContentControl>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Email:" VerticalAlignment="Center" Margin="10"></Label>
                    <TextBox Grid.Column="1" Margin="10 20" Name="email" Height="30"></TextBox>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Password:" VerticalAlignment="Center" Margin="10"></Label>
                    <PasswordBox Grid.Column="1" Margin="10 20" Name="password" Height="30"></PasswordBox>
                </Grid>
                <Grid Grid.Row="4">
                    <Button Click="ButtonBase_OnClick" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="100">Login</Button>
                </Grid>
            </Grid>

</Page>
