<Page x:Class="Question2.Page11"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Question2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page11">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="8*"/>

        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="SubPageFrame"/>

        
        <HeaderedContentControl Grid.Row="1" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="DarkRed"  Content="Modify Profile"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Width="300">
        <Grid Grid.Row="1">
            <TextBlock Margin="5,0,5,0">Customer Id</TextBlock>
            <TextBox  Margin="5,15,5,5" IsReadOnly="True" Name="txtId" Text="{Binding Path=CustomerId, Mode=OneWay}"  />
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Margin="5,0,5,0">Customer Name</TextBlock>
            <TextBox  Margin="5,15,5,5" Name="txtName" Text="{Binding Path=CustomerFullName, Mode=OneWay}"  />
        </Grid>

        <Grid Grid.Row="4">
            <TextBlock Margin="5,0,5,0">Telephone</TextBlock>
            <TextBox  Margin="5,15,5,5" Name="txtTelephone" Text="{Binding Path=Telephone, Mode=OneWay}"  />
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Margin="5,0,5,0">Email</TextBlock>
                <TextBox  Margin="5,15,5,5" Name="txtEmail" IsReadOnly="True" Text="{Binding Path=EmailAddress, Mode=OneWay}"  />
        </Grid>
        <Grid Grid.Row="3">
            <TextBlock Margin="5,0,5,0">Date Of Birth</TextBlock>
            <DatePicker  Margin="5,15,5,5" Name="dpDob" Text="{Binding Path=CustomerBirthday, Mode=OneWay}"  />
        </Grid>

        <Grid Grid.Row="6">
            <TextBlock Margin="5,0,5,0">Status</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,20,0,5">
                <RadioButton Content="Active" Margin="0,0,30,0" Name="active"></RadioButton>
                <RadioButton Content="Deactive" Name="deactive"></RadioButton>
            </StackPanel>
        </Grid>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Height="30" Click="ButtonBase_OnClick">Refresh</Button>
                    <Button Margin="5" Grid.Column="1" Height="30" Click="ButtonBase_OnClickAdd">Save</Button>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Height="30" Click="ButtonBase_OnClickPass">Change Password</Button>
                </Grid>
            </StackPanel>
    </StackPanel>
</Grid>
</Page>
