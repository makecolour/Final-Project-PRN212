<Page x:Class="Main_Project.Page13"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page13">

    <Grid>
        <Grid.RowDefinitions>
 
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="8*"/>

        </Grid.RowDefinitions>

        <HeaderedContentControl Grid.Row="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="DarkRed"  Content="Register"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="300">
            <Grid Grid.Row="2">
                <TextBlock Margin="5,0,5,0">Customer Name</TextBlock>
                <TextBox  Margin="5,15,5,5" Name="txtName"/>
            </Grid>

            <Grid Grid.Row="4">
                <TextBlock Margin="5,0,5,0">Telephone</TextBlock>
                <TextBox  Margin="5,15,5,5" Name="txtTelephone" />
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock Margin="5,0,5,0">Email</TextBlock>
                <TextBox  Margin="5,15,5,5" Name="txtEmail"/>
            </Grid>
            <Grid>
                <TextBlock Margin="5,0,5,0">Password</TextBlock>
                <PasswordBox  Margin="5,15,5,5" Name="txtPass" />
            </Grid>
            <Grid>
                <TextBlock Margin="5,0,5,0">ReType Password</TextBlock>
                <PasswordBox  Margin="5,15,5,5" Name="txtRetypePass" />
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock Margin="5,0,5,0">Date Of Birth</TextBlock>
                <DatePicker  Margin="5,15,5,5" Name="dpDob"/>
            </Grid>

            
            <StackPanel>
               
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="5" Grid.Column="0" Height="30" Click="ButtonBase_OnClick">Register</Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
